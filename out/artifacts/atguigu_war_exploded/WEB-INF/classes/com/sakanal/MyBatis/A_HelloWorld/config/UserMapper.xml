<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <!--
        namespace:名称空间（可以随便起名）,但是接口可以与配置文件进行动态绑定，所有最好不要随便启，指定为接口的全类名
        id:唯一标识
        resultType:返回值类型
        #{id}:从传递过来的参数中取出id值
    -->
    <mapper namespace="com.sakanal.MyBatis.A_HelloWorld.dao.UserMapper">
        <select id="getUserById" resultType="com.sakanal.MyBatis.A_HelloWorld.bean.User">
            <!--是   #{}     -->
            select * from `user` where id=#{id}
        </select>
    </mapper>