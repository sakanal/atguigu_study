<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sakanal.MyBatis.E_Cache.mapper.DepartmentMapper">
<!--    <cache eviction="FIFO" flushInterval="60000" readOnly="false" size="1024"></cache>-->
    <!--    <cache type="org.mybatis.caches.ehcache.EhcacheCache"></cache>-->
    <!--引用缓存：namespace：指定和哪个名称空间下的缓存一样-->
    <cache-ref namespace="com.sakanal.MyBatis.E_Cache.mapper.UserMapper"/>
    <select id="getDepartmentById" resultType="com.sakanal.MyBatis.E_Cache.pojo.Department">
        select id,department_name name from `department` where id=#{id}
    </select>
</mapper>