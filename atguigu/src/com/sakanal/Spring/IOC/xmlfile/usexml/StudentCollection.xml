<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--集合类型属性注入-->
    <bean id="student" class="com.sakanal.Spring.IOC.usexml.bean.collection.Student">

        <!--数组类型属性注入-->
        <property name="courses">
<!--            <list></list>也可以注入进数组类型中           -->
            <array>
                <value>Java课程</value>
                <value>数据库课程</value>
            </array>
        </property>

        <!--list类型属性注入-->
        <property name="list">
            <list>
                <value>张三</value>
                <value>王五</value>
            </list>
        </property>

        <!--map类型属性注入-->
        <property name="maps">
            <map>
                <entry key="JAVA" value="java"/>
                <entry key="PHP" value="php"/>
            </map>
        </property>

        <!--set类型属性注入-->
        <property name="sets">
            <set>
                <value>MySQL</value>
                <value>Redis</value>
            </set>
        </property>

        <!--注入list集合类型类型，值是对象-->
        <property name="courseList">
            <list>
                <ref bean="course1"/>
                <ref bean="course2"/>
                <bean class="com.sakanal.Spring.IOC.usexml.bean.collection.Course">
                    <property name="name" value="JDBC"/>
                </bean>
            </list>
        </property>
    </bean>
    <!--创建多个course对象-->
    <bean id="course1" class="com.sakanal.Spring.IOC.usexml.bean.collection.Course">
        <property name="name" value="Spring5框架"/>
    </bean>
    <bean id="course2" class="com.sakanal.Spring.IOC.usexml.bean.collection.Course">
        <property name="name" value="MyBatis框架"/>
    </bean>
</beans>